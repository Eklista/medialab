# ==============================================
# GOD MODE FRONTEND CONFIGURATION
# ==============================================
# Super admin interface environment variables
# Copy to .env and customize for your environment

# -----------------------------
# API ENDPOINTS
# -----------------------------
# Backend API base URL
VITE_API_URL=http://localhost/api

# WordPress REST API URL
VITE_WP_URL=http://localhost/wp-json/wp/v2

# Direct database access (development only)
# VITE_DB_ADMIN_URL=http://localhost:8080

# System monitoring endpoints
VITE_MONITORING_URL=http://localhost/api/monitoring
VITE_LOGS_URL=http://localhost/api/logs

# -----------------------------
# APPLICATION SETTINGS
# -----------------------------
# App metadata
VITE_APP_NAME=God Mode
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Super administrator interface

# Environment mode
VITE_NODE_ENV=development

# -----------------------------
# SECURITY & ACCESS CONTROL
# -----------------------------
# JWT token storage
VITE_TOKEN_STORAGE_KEY=godmode_auth_token
VITE_REFRESH_TOKEN_KEY=godmode_refresh_token

# Super admin authentication
VITE_REQUIRED_ROLE=super_admin
VITE_ALLOWED_ROLES=super_admin,system_admin

# Session settings (shorter for security)
VITE_SESSION_TIMEOUT=15
VITE_AUTO_LOGOUT_WARNING=2
VITE_REQUIRE_2FA=true

# Security features
VITE_ENABLE_ACTIVITY_LOGGING=true
VITE_ENABLE_IP_RESTRICTION=false
VITE_ALLOWED_IPS=127.0.0.1,::1

# -----------------------------
# SYSTEM MANAGEMENT FEATURES
# -----------------------------
# Core system controls
VITE_ENABLE_SYSTEM_RESTART=true
VITE_ENABLE_SERVICE_CONTROL=true
VITE_ENABLE_DATABASE_TOOLS=true
VITE_ENABLE_BACKUP_RESTORE=true

# Advanced features
VITE_ENABLE_DOCKER_MANAGEMENT=true
VITE_ENABLE_SERVER_MONITORING=true
VITE_ENABLE_LOG_VIEWER=true
VITE_ENABLE_CRON_MANAGEMENT=true

# Developer tools
VITE_ENABLE_API_EXPLORER=true
VITE_ENABLE_DATABASE_CONSOLE=false
VITE_ENABLE_REDIS_BROWSER=false

# -----------------------------
# MONITORING & ANALYTICS
# -----------------------------
# System monitoring
VITE_ENABLE_REAL_TIME_MONITORING=true
VITE_MONITORING_REFRESH_INTERVAL=5000

# Performance metrics
VITE_ENABLE_PERFORMANCE_CHARTS=true
VITE_METRICS_RETENTION_DAYS=30

# Error tracking
VITE_ENABLE_ERROR_TRACKING=true
VITE_ERROR_RETENTION_DAYS=90

# Audit logging
VITE_ENABLE_AUDIT_LOGS=true
VITE_AUDIT_LOG_LEVEL=info

# -----------------------------
# DANGEROUS OPERATIONS
# -----------------------------
# Confirmation requirements
VITE_REQUIRE_CONFIRMATION_DELETE=true
VITE_REQUIRE_CONFIRMATION_SYSTEM=true
VITE_CONFIRMATION_TIMEOUT=30

# Safety features
VITE_ENABLE_UNDO_OPERATIONS=true
VITE_UNDO_RETENTION_HOURS=24

# Backup before dangerous ops
VITE_AUTO_BACKUP_BEFORE_DELETE=true
VITE_AUTO_BACKUP_BEFORE_SYSTEM_CHANGE=true

# -----------------------------
# UI/UX SETTINGS
# -----------------------------
# Theme (typically dark for admin tools)
VITE_DEFAULT_THEME=dark
VITE_THEME_STORAGE_KEY=godmode_theme
VITE_FORCE_DARK_MODE=true

# Interface density
VITE_UI_DENSITY=compact
VITE_SHOW_ADVANCED_OPTIONS=true

# Terminal/console settings
VITE_ENABLE_TERMINAL=true
VITE_TERMINAL_HISTORY_SIZE=1000
VITE_TERMINAL_AUTO_COMPLETE=true

# -----------------------------
# EXTERNAL INTEGRATIONS
# -----------------------------
# Server management
# VITE_SSH_ENABLED=false
# VITE_DOCKER_SOCKET=/var/run/docker.sock

# Monitoring services
# VITE_GRAFANA_URL=http://localhost:3000
# VITE_PROMETHEUS_URL=http://localhost:9090

# Alert services
# VITE_SLACK_WEBHOOK_URL=your-slack-webhook
# VITE_DISCORD_WEBHOOK_URL=your-discord-webhook

# -----------------------------
# DEVELOPMENT & DEBUG
# -----------------------------
# Debug features
VITE_DEBUG=true
VITE_VERBOSE_LOGGING=true
VITE_SHOW_INTERNAL_APIS=true

# Development tools
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_TIME_TRAVEL=false
VITE_MOCK_DANGEROUS_OPERATIONS=true

# Performance profiling
VITE_ENABLE_PROFILER=true
VITE_PROFILE_THRESHOLD=100